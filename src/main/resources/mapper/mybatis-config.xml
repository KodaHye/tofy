<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

  <!-- Class 적용을 위한 Alias -->
  <typeAliases>
	<typeAlias type="com.ssafy.tofy.freeboard.dto.FreeBoardDto" alias="freeBoardDto"/>
	<typeAlias type="com.ssafy.tofy.freeboard.dto.FreeBoardCommentDto" alias="freeBoardCommentDto"/>
    <typeAlias type="com.ssafy.tofy.user.dto.User" alias="user" />
	<typeAlias type="com.ssafy.tofy.notice.dto.NoticeDto" alias="noticeDto"/>
	<typeAlias type="com.ssafy.tofy.attraction.dto.AttractionDto" alias="attractionDto"/>
	<typeAlias type="com.ssafy.tofy.attraction.dto.AttractionDescDto" alias="attractionDescDto"/>
	<typeAlias type="com.ssafy.tofy.attraction.dto.Sido" alias="sidoDto"/>
	<typeAlias type="com.ssafy.tofy.attraction.dto.Gugun" alias="gugunDto"/>
	<typeAlias type="com.ssafy.tofy.attraction.dto.AttractionReviewDto" alias="attractionReviewDto"/>
  </typeAliases>
  
  <!-- Mapper 파일 경로 설정  -->
  <mappers>
	<mapper resource="mapper/freeboard.xml"/>
    <mapper resource="mapper/user.xml"/>
	<mapper resource="mapper/notice.xml"/>
	<mapper resource="mapper/attraction.xml"/>
  </mappers>

</configuration>